
<!-- registrations/new.html.erb-->

<div class="button-title-fade animated fadeIn">
  <nav class="navbar navbar-light bg-faded" >
    <div class="button-bar">
      <div id="btn-logout">
        <%= button_to "Back", history_entries_path, method: "get", id:"btn-outline-danger", class: "btn btn-outline-danger"%>
      </div>
      <div id="btn-login">
        <%= button_to "Tutor Sign In", tutors_path, method: "get", id:"btn-outline-success", class: "btn btn-outline-success"%>
      </div>
    </div>
  </nav>
</div>

<div class="form-row">
  <div class="form-column">
    <div id="title-container">
      <%= image_tag "slc_logo.png", id:"slc-logo-pic-student-signup" %>
    </div>
    <h1 class="subtitle animated fadeInLeft">Writing Service Tutor Sign Up Form</h1>
    <div class="container-fluid animated fadeInUp" id="form-container">


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="row" id="row">
            <div class="col-4">
              <%= f.label :first_name, "First Name *", class: "label" %>
              <%= f.text_field :first_name, class: "form_signup form-control", required: true  %>
            </div>
            <div class="col-4">
              <%= f.label :last_name, "Last Name *", class: "label" %>
              <%= f.text_field :last_name, class: "form_signup form-control", required: true   %>
            </div>
          </div>

          <div class="row" id="row">
            <div class="col-4">
              <%= f.label(:sid, "Student ID Number *", class: "label") %>
              <%= f.text_field :sid, class: "form_signup form-control", required: true %>
            </div>
            <div class="col-4">
              <%= f.label(:email, "E-mail *", class: "label") %>
              <%= f.email_field :email, class: "form_signup form-control", required: true  %>
            </div>
          </div>


          <div class="row" id="row">
            <div class="col-4">

              <%= f.label(:password, class: "label") %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
              <%= f.password_field :password, class: 'form_signup form-control', required: true %>

            </div>
            <div class="col-4">
              <%= f.label(:password_confirmation, "Password confirmation *", class: "label") %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password_confirmation, class: 'form_signup form-control', required: true  %>
            </div>
          </div>

          <div class='row' id="row">
            <div class="col-4">
              <%= f.label(:admin, 'Grant admin access rights', class: 'label') %>
              <%= f.check_box :admin %>
            </div>
          </div>


          <div class="row" id="row">
            <div class="col-5">
              <%= f.submit "Sign up", :id => "form-submit", :class =>"btn btn-primary" %>
            </div>
          </div>
      <% end %>


      <div class='row' id="row">
        <div class="col-4">

          <%= render "tutors/shared/links" %>
        </div>
      </div>

      <br/><br/>
    </div>
  </div>
</div>
</div>