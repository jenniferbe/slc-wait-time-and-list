<li><%= link_to "Tutor Sign In", tutors_path, method: "get" %></li>


<div id="title-backdrop"></div>

<h1 class="title">Berkeley Student Learning Center</h1>

<h1 class="subtitle">Writing Service Sign-in</h1>

<div class="form-container container-fluid">

    <%= form_tag(students_path, method: "post") do %>

        <%= label_tag(:last_name, "Last Name*", class: "label") %>
        <div class="col-2">
            <%= text_field_tag "student_last_name", nil, placeholder: "Last Name", class: "form_signup form-control", require: true   %>
        </div>

        <%= label_tag(:first_name, "First Name*", class: "label") %>
        <div class="col-2">
            <%= text_field_tag "student_first_name", nil, placeholder: "First Name", class: "form_signup form-control", required: true  %>
        </div>

        <%= label_tag(:sid, "Student ID Number (Number located on your Cal ID card)*", class: "label") %>
        <div class="col-2">
            <%= number_field_tag "student_sid", nil, placeholder: "000000000", class: "form_signup form-control", required: true %>
        </div>

        <%= label_tag(:email, "E-mail *", class: "label") %>
        <div class="col-2">
            <%= email_field_tag "student_email", nil, placeholder:"example@gmail.com", class: "form_signup form-control", required: true  %>
        </div>

        <%= label_tag(:meet_type, "Which service format are you seeking today? *", class: "label") %>
        <div id="schedule-options" class="container">
            <div class="radio row">
                <div class="col-8">
                    <%= radio_button_tag(:meet_type, "scheduled", required: true) %> Appointment
                </div>
                <div class="col-8">
                    <%= radio_button_tag(:meet_type, "weekly") %> Weekly Session
                </div>
                <div class="col-8">
                    <%= radio_button_tag(:meet_type, "drop-in") %> Drop-in
                </div>
            </div>
        </div>
        <br/><br/><br/>

        <%= label_tag(:course, "Course*", class: "label") %>
        <div class="col-5">
            <%= select_tag(:course, options_for_select([["Please choose a course...", "0"], ["Other (Enter course DEPARTMENT and NUMBER in next box)", "Other"], "African American R1A", "African American R1B", "American Studies 10", "Anthropology R5A", "Anthropology R5B", "Asian American Studies R2A", "Asian American Studies R2B", "Asian Studies 10", "Astronomy 10", "Chicano Studies R1A", "Chicano Studies R1B", "Classics R44", "College Writing 1", "College Writing R1A", "College Writing R1B", "College Writing R4A", "College Writing R4B", "Comparative Literature R1A", "Comparative Literature R1B", "Economics 191", "English R1A", "English R1B", "English 45A", "English 45B", "English 45C", "ESPM 50AC", "ESPM 155AC", "French R1A", "French R1B", "Film and Media R1A", "Film and Media R1B", "Gender & Women's Studies 50AC", "German R5A", "German R5B", "History of Art R1A", "History of Art R1B", "Interdisciplinary Studies Field 191", "International Area Studies 45", "Italian Studies R5A ", "Italian Studies R5B ", "Legal Studies R1A", "Legal Studies R1B", "Linguistics Studies R1A", "Linguistics Studies R1B", "Media Studies 10", "Native American Studies R1A", "Native American Studies R1B", "Near Eastern Studies R1A", "Near Eastern Studies R1B", "Peace and Conflict Studies 10", "Philosophy R1A", "Philosophy R1B", "Philosophy 100", "Political Science 1", "Political Science 2", "Political Science 5", "Psychology 1", "Psychology 2", "Rhetoric R1A", "Rhetoric R1B", "Scandinavian R5A", "Scandinavian R5B", "Slavic Languages and Literatures R5A", "Slavic Languages and Literatures R5B", "Sociology 1", "Sociology 3AC", "Sociology 5", "Sociology 121", "Sociology 160", "Sociology 194", "South and Southeast Asia Studies R5A", "South and Southeast Asia Studies R5B", "South Asian Studies R5A", "South Asian Studies R5B", "Spanish R1A", "Spanish R1B", "Theater, Dance, and  Performance R1A", "Theater, Dance, and  Performance R1B", "UGBA 10"]), class: "form_signup form-control", required: true ) %>        </div>

        <%= label_tag(:course_other, "If other, please specify the DEPARTMENT and NUMBER of your course.", class: "label") %>
        <div class="col-5">
            DO NOT ABBREVIATE your department. (Ex: Philosophy 102)
            <%= text_field_tag "course_other", nil, placeholder: "", class: "form_signup form-control", require: false   %>
        </div>

        <%= label_tag(:residency, "What is your residency status?*", class: "label") %>
        <div id="schedule-options" class="container">
            <div class="radio row">
                <div class="col-8">
                    <%= radio_button_tag(:residency, true, required: true) %> Domestic
                </div>
                <div class="col-8">
                    <%= radio_button_tag(:residency, false) %> International
                </div>
            </div>
        </div>
        <br/><br/>

        <%= label_tag(:transfer, "Are you a transfer student?*", class: "label") %>
        <div id="schedule-options" class="container">
            <div class="radio row">
                <div class="col-8">
                    <%= radio_button_tag(:transfer, true, required: true) %> Yes
                </div>
                <div class="col-8">
                    <%= radio_button_tag(:transfer, false) %> No
                </div>
            </div>
        </div>
        <br/><br/>

        <%= label_tag(:concurrency, "Are you a concurrent enrollment student? (e.g., Berkeley Extension, BISP, UCICP, etc.)*", class: "label") %>
        <div id="schedule-options" class="container">
            <div class="radio row">
                <div class="col-8">
                    <%= radio_button_tag(:concurrency, true, required: true) %> Yes
                </div>
                <div class="col-8">
                    <%= radio_button_tag(:concurrency, false) %> No
                </div>
            </div>
        </div>
        <br/><br/>

        <%= label_tag(:concurrent_institution, "If yes, please indicate your other program and/or institution:", class: "label") %>
        <div class="col-2">
            <%= text_field_tag "concurrent_institution", nil, placeholder: nil, class: "form_signup form-control", require: true   %>
        </div>
        <br/>

        <div class="col-4">
            <%= submit_tag"Submit", :id => "form-submit", :class =>"btn btn-primary" %>
        </div>
    <% end %>

</div>